{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "size": "Default",
                    "weight": "Default",
                    "text": "${$root.numberOfTasks}",
                    "horizontalAlignment": "Center"
                }
            ],
            "bleed": true,
            "style": "accent"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${$root.strings.QuickViewDescription}",
                    "wrap": true,
                    "spacing": "Medium"
                }
            ],
            "spacing": "Medium"
        },
        {
            "type": "Container",
            "spacing": "Large",
            "style": "emphasis",
            "$data": "${$root.tasks}",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${$root.strings.OpenedLabel}: {{DATE(${createdDate},COMPACT)}} ${if(overDueDays != '', '(' + overDueDays + ' ' + $root.strings.OverdueLabel + ')','')}",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder",
                                    "color": "${if(overDueDays != '', 'attention','Default')}",
                                    "isVisible": false
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "${listName}",
                                    "wrap": true,
                                    "size": "Small",
                                    "weight": "Bolder",
                                    "isVisible": true
                                }
                            ],
                            "verticalContentAlignment": "Center"
                            
                        },
                        {
                            "type": "Column",
                            "width": "32px",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "${logoUrl}",
                                    "altText": "${platform}"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ]
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "${title}",
                                    "wrap": true,
                                    "size": "Medium",
                                    "weight": "Bolder"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://raw.githubusercontent.com/pnp/AdaptiveCards-Templates/main/samples/help-desk/assets/arrow-forward.png"
                                }
                            ],
                            "horizontalAlignment": "Right",
                            "verticalContentAlignment": "Center",
                            "width": "16px"
                        }
                    ],
                    "selectAction": {
                        "type": "Action.Submit",
                        "associatedInputs": "none",
                        "data": {
                            "id": "selectTask",
                            "taskKey": "${id}"
                        }
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}